<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arabicmapapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PageCategoryActivity"
            android:screenOrientation="locked" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebsiteView"
            android:label="@string/title_activity_web_view"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name=".DrawerScreen"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FragmentFavourite"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FragmentInfo"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FragmentSearch"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FragmentSetting"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FragmentContactUs"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
